# asdf
THIRD_PARTY_DIR=$HOMEBREW_PREFIX/opt
. $THIRD_PARTY_DIR/asdf/asdf.sh
. $THIRD_PARTY_DIR/asdf/etc/bash_completion.d/asdf.bash

# bash completion
if type brew &>/dev/null; then
  if [[ -r "${THIRD_PARTY_DIR}/etc/profile.d/bash_completion.sh" ]]; then
    source "${THIRD_PARTY_DIR}/etc/profile.d/bash_completion.sh"
  else
    for COMPLETION in "${BREW_PREFIX}/etc/bash_completion.d/"*; do
      [[ -r "$COMPLETION" ]] && source "$COMPLETION"
    done
  fi
fi

# direnv
eval "$(direnv hook bash)"

# fzf
[ -f ~/.fzf.bash ] && source ~/.fzf.bash

# zoxide
eval "$(zoxide init bash)"
